<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Code">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center|top"
        android:text="Voici votre passe"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@mipmap/ic_launcher"
        android:layout_marginTop="80dp"
        android:id="@+id/qrcodeImageView"/>


    <TextView
        android:id="@+id/codeQR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-medium"
        android:layout_below="@id/qrcodeImageView"
        android:gravity="center|top"
        android:text="Voici votre passe de la semaine"
        android:textColor="#F13D29"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/OK"
        android:layout_below="@id/codeQR"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:textColor="#ffff"
        android:text="OK"
        android:textStyle="bold"
        android:background="@drawable/btn_con1"
        android:layout_marginBottom="10sp"/>

</RelativeLayout>